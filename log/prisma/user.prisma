// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("USER_DATABASE_URL")
}

model Group {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    Int
  method    String
  url       String
  content   String?
  time      BigInt
  ip        String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Permission {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    Int
  method    String
  url       String
  content   String?
  time      BigInt
  ip        String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Role {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    Int
  method    String
  url       String
  content   String?
  time      BigInt
  ip        String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    Int
  method    String
  url       String
  content   String?
  time      BigInt
  ip        String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Profile {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    Int
  method    String
  url       String
  content   String?
  time      BigInt
  ip        String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
